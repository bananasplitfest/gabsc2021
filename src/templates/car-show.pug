extends partials/layout

//- Override default config variables
append config
  - var vendorStyles = [ 'tiny-slider/dist/tiny-slider.css', 'lightgallery.js/dist/css/lightgallery.min.css', 'add-to-calendar-button/assets/css/atcb.min.css']
  - var vendorScripts = ['tiny-slider/dist/min/tiny-slider.js', 'lightgallery.js/dist/js/lightgallery.min.js', 'lg-fullscreen.js/dist/lg-fullscreen.min.js', 'lg-zoom.js/dist/lg-zoom.min.js', 'add-to-calendar-button/assets/js/atcb.min.js']
  - var parentMenu = 'Activities'
  - var pageTitle = 'Car Show'

//- Navbar
block navbar
  include partials/navbar-solid-shadow

//- Page Content
block content
  section.sidebar-enabled.sidebar-end
    .container
      .row

        // Project description
        .col-lg-4.sidebar.order-lg-2
          .px-sm-4.pt-6.py-lg-6.position-relative.zindex-5
            .small.text-body.my-0.py-0 State Farm Agent Sarah Crispin-Thomas
            h1.h2.my-0.py-0 Car Show
            .small.text-body.mb-3 benefiting Relay for Life
            a(href='https://dashboard.bananasplitfest.com/car-show-registration/', target="_blank").btn.btn-outline-primary.btn-sm.ms-auto.mx-3.mb-3.d-inline-block Online Registration
            a(href='/pdf/2022-car-show-reg.pdf', target="_blank").btn.btn-primary.btn-sm.ms-auto.mx-3.mb-3.d-inline-block Print Form
            btn.btn.btn-translucent-dark.btn-sm.ms-auto.mx-3.mb-3.d-inline-block#atcb #[i.far.fa-calendar-plus.pe-2] Add to Calendar
            script.
              const config = {
                name: "Banana Split Car Show",
                description: "13 different vehicle categories. $10 car entry fee, benefiting Relay for Life Latrobe.<br>â†’ [url]https://www.bananasplitfest.com/car-show.html[/url]",
                startDate: "2022-08-20",
                startTime: "12:00:00",
                endDate: "2022-08-20",
                endTime: "16:00:00",
                timeZone: "America/New_York",
                location: "130 Depot St, Latrobe, PA 15650",
                trigger: "click",
                options: [
                  "Google",
                  "iCal",
                  "Outlook.com",
                  "Yahoo"
                ],
                iCalFileName: "Car-Show",
              };
              const button = document.querySelector('#atcb');
              button.addEventListener('click', () => atcb_action(config, button));
            a(href='#gallery' data-scroll).btn.btn-translucent-primary.btn-sm.ms-auto.mx-3.mb-3.d-inline-block.d-lg-none Gallery
            .d-sm-flex.align-items-center.pt-3.pb-2.mb-5.border-bottom.fs-sm

            //-   .d-flex.align-items-center.mb-3
            //-     .text-nowrap.text-muted.me-3
            //-       i.ai-calendar.me-1
            //-       span Aug 28, 2020
            //-     .text-nowrap.text-muted
            //-       i.ai-tag.me-1
            //-       span 3D Modelling
            h3.h5 Details
            ul.list-unstyled.fs-md.mb-4.pb-2
              li.mb-2
                | Date:
                span.fw-medium.text-nav.ms-2 August 20, 2022
              li.mb-2
                | Time:
                span.fw-medium.text-nav.ms-2 Noon - 4PM
              li.mb-2
                | Location:
                span.fw-medium.text-nav.ms-2 WCCC Latrobe
              li
                | Cost per Entry:
                span.fw-medium.text-nav.ms-2 $10
            h3.h5 Show Information
            p.fs-sm.mb-2.pb-1 Our car show is for a good cause! Not only will guests enjoy seeing a variety of cars, trucks, and motorcyles but you'll also get to support the amazing efforts of Relay for Life - Latrobe's efforts to stamp out cancer. Prizes will be awarded in each registration class, "Best of Show," and "Kid's Choice." 
            p.fs-sm.mb-4.pb-2 Dash plaques are available for the first 100 cars. Register online or by printing and mailing in the form.
            h3.h5 Categories
            p.fs-sm.mb-4.pb-2 Antique, Antique Import, Chrysler/Mopar, Corvette, Ford, GM, Import, Mini, Motorcycle, Mustang, Special Interest, Street Rod, and Truck
            h3.h5 Sponsors
            ul.list-unstyled.fs-md.mb-4.pb-2
              li.mb-2
                | State Farm Agent Sarah Crispin-Thomas
              li.mb-2
                | Relay for Life - Latrobe
              li.mb-2
                | Superior Motors
              li.mb-2
                | LawnRx
              li.mb-2
                | Ridgeview Veterinary Clinic
              li.mb-2
                | Prah's Auto Sales &amp; Service
              li.mb-2
                | Michael Blissman CPA
              li.mb-2
                | Robindale Energy
              li.mb-2
                | GLLV Chamber of Commerce
              li.mb-2
                | Valley Dairy Restaurants

        

        // Project gallery (List)
        #gallery.col-lg-8.content.pb-lg-4.order-lg-1
          .gallery.pt-5.pb-4.py-lg-5
            a(href='img/car-show/car-show-blue.jpg').gallery-item.rounded-3.mb-grid-gutter
              img(src='img/car-show/car-show-blue-thumb.jpg' alt='Blue car entry')
            a(href='img/car-show/car-show-red-car.jpg').gallery-item.rounded-3.mb-grid-gutter
              img(src='img/car-show/car-show-red-car-thumb.jpg' alt='Cars entered in the car show')



//- Footer
block footer
  include partials/footer-default