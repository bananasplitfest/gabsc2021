extends partials/layout

//- Override default config variables
append config
  - var vendorStyles = ['lightgallery.js/dist/css/lightgallery.min.css']
  - var vendorScripts = ['lightgallery.js/dist/js/lightgallery.min.js']
  - var parentMenu = 'Contact'
  - var pageTitle = 'Contact Us'

//- Navbar
block navbar
  include partials/navbar-solid-shadow

//- Page Content
block content

  // Background shape
  section.position-relative.bg-gradient(style='height: 590px;')
    .shape.shape-bottom.shape-curve-side.bg-body
      svg(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3000 250')
        g: path(fill='currentColor' d='M3000,0v250H0v-51c572.7,34.3,1125.3,34.3,1657.8,0C2190.3,164.8,2637.7,98.4,3000,0z')
  
  // Contact details + Form
  section.container.position-relative.zindex-5.pb-5.pt-3(style='margin-top: -590px;')
    .row.pt-md-4.pt-lg-5.mt-3
      .col-lg-4.col-md-5.offset-lg-1
        h1.text-light.mb-3.pb-4.pt-sm-3 Reach Us
        .d-flex.align-items-start.mb-4
          i.ai-map-pin.h3.mb-0.text-light
          .ps-3
            p.text-light.mb-2 PO Box 463<br>Latrobe, PA 15650
        .d-flex.align-items-start.mb-4
          i.ai-mail.h3.mt-n1.mb-0.text-light
          .ps-3
            a(href='mailto:info@bananasplitfest.com').d-inline-block.text-light.text-decoration-none.mb-2 info@bananasplitfest.com
        .d-flex.align-items-start.mb-4
          i.ai-phone.h3.mt-n1.mb-0.text-light
          .ps-3
            a(href='tel:+17245372671,702').d-inline-block.text-light.text-decoration-none.mb-2 724 537 2671 x702
        .d-flex.align-items-start.mb-4
          i.ai-clock.h3.mt-n1.mb-0.text-light
          .ps-3
            ul.list-unstyled.fs-sm.text-light
              li
                span.fs-base.me-1.fw-bolder Mon - Fri:
                | 10AM - 5PM
              li
                span.fs-base.me-1.fw-bolder Sat - Sun:
                | Closed

      .col-xl-6.col-md-7
        .card.border-0.shadow-lg
          .card-body.py-5.px-3.px-sm-4
            h2.h3.text-center Drop us a line
            p.fs-sm.text-muted.text-center We normally respond within 2 business days
            form(novalidate, netlify).needs-validation.pt-2.px-md-3
              .row
                .col-md-6.mb-3.pb-1
                  label(for='cont-fn').form-label
                    | Full name
                    sup.text-danger.ms-1 *
                  input(type='text' id='cont-fn' placeholder='John Doe' required).form-control
                  .invalid-feedback Please enter your full name!
                .col-md-6.mb-3.pb-1
                  label(for='cont-email').form-label
                    | Email address
                    sup.text-danger.ms-1 *
                  input(type='email' id='cont-email' placeholder='j.doe@example.com' required).form-control
                  .invalid-feedback Please enter a valid email address!
              .mb-3.pb-1
                label(for='cont-subject').form-label
                  | Subject
                  sup.text-danger.ms-1 *
                input(type='text' id='cont-subject' placeholder='Title of your message' required).form-control
                .invalid-feedback Please enter a subject!
              .mb-3.pb-1
                label(for='cont-message').form-label
                  | Message
                  sup.text-danger.ms-1 *
                textarea(id='cont-message' rows='5' placeholder='Write your message here' required).form-control
                .invalid-feedback Please write a message!
              .text-center.pt-2
                button(type='submit').btn.btn-primary Send Message




//- Footer
block footer
  include partials/footer-default