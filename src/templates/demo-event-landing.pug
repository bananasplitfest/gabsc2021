      .row.justify-content-center
        .col-xl-6.col-lg-7.col-md-8.text-center
          h1.display-4.text-light.mb-4 Banana Split Celebration
          .d-inline-flex.align-items-center.mx-1.px-3.mb-4
            i.ai-calendar.h2.mb-0.me-2.text-light
            span.text-light August 21, 2021
          .d-inline-flex.align-items-center.mx-1.px-3.mb-4
            i.ai-map-pin.h2.mb-0.me-2.text-light
            span.text-light Legion Keener Park, Latrobe, PA
          .pt-2
            a(href='#tickets' data-scroll).btn.btn-success Buy Tickets
    div(data-jarallax-element='50' data-disable-parallax-down='md')
      img(src='img/demo/event-landing/people.png' alt='People').d-block.mx-auto
  

  // Countdown
  section.bg-secondary.py-5.py-md-6
    .container.py-2.py-md-0
      .row.align-items-center
        .col-xl-4.text-center.text-xl-start
          h2.mb-4.mb-xl-0 Be at the celebration
        .col-xl-8
          .countdown.h2.display-2.justify-content-center.justify-content-xl-start(data-countdown='08/21/2021')
